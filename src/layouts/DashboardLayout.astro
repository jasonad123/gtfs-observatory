---
import '@picocss/pico/css/pico.min.css';
import '@picocss/pico/css/pico.colors.min.css';
import '../styles/global.css';
import '@fontsource/red-hat-display';
import '@fontsource/instrument-sans';

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{title}</title>
  <meta name="description" content="Explore the state of transit data">
</head>
<body>
  <main class="container">
    <slot />
  </main>
  <footer class="container">
    <small>
      Data sourced from <a href="https://mobilitydatabase.org" target="_blank" rel="noopener">MobilityData</a>
      | Last updated: {new Date().toLocaleString('en-US', { timeZone: 'America/New_York', year: 'numeric', month: 'long', day: 'numeric', hour: 'numeric', minute: '2-digit', hour12: true })} ET | Made with <img src="/icons/ix--heart-filled.svg" alt="" class="heart-icon" aria-hidden="true"/> by<a href="https://github.com/jasonad123" target="_blank" rel="noopener"> Jason A</a>
    </small>
    <small>
      Source code available on <a href = "https://github.com/jasonad123/dmv-gtfs-dev" target="_blank" rel="noopener">GitHub</a>
    </small>
  </footer>
</body>
</html>

<style>
  footer {
    margin-top: 5rem;
    padding: 2rem 1rem;
    text-align: center;
    border-top: 1px solid var(--pico-muted-border-color);
    background-color: var(--pico-card-background-color);
  }

  footer small {
    display: block;
    line-height: 1.6;
  }

  footer a {
    color: var(--pico-primary);
    text-decoration: none;
  }

  footer a:hover {
    text-decoration: underline;
  }

  .heart-icon {
    width: 1.5em;
    height: 1.5em;
    display: inline-block;
    vertical-align: middle;
    filter: invert(23%) sepia(83%) saturate(3184%) hue-rotate(343deg) brightness(92%) contrast(94%);
  }
</style>
