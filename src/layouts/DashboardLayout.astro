---
import '@picocss/pico/css/pico.min.css';
import '../styles/global.css';

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{title}</title>
  <meta name="description" content="Real-time status and downloads for DC Metro area GTFS feeds">
</head>
<body>
  <main class="container">
    <slot />
  </main>
  <footer class="container">
    <small>
      Data sourced from <a href="https://mobilitydatabase.org" target="_blank" rel="noopener">MobilityData</a>
      | Last updated: {new Date().toLocaleString('en-US', { timeZone: 'America/New_York' })} ET
    </small>
  </footer>
</body>
</html>

<style>
  footer {
    margin-top: 5rem;
    padding: 2rem 1rem;
    text-align: center;
    border-top: 1px solid var(--pico-muted-border-color);
    background-color: var(--pico-card-background-color);
  }

  footer small {
    display: block;
    line-height: 1.6;
  }

  footer a {
    color: var(--pico-primary);
    text-decoration: none;
  }

  footer a:hover {
    text-decoration: underline;
  }
</style>
