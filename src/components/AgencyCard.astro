---
interface Props {
  agencyId: string;
  name: string;
  feedCount: number;
  status: 'healthy' | 'issues' | 'error' | 'unknown';
  website?: string;
  color?: string;
  secondaryColor?: string;
  textColor?: string;
}

const { agencyId, name, feedCount, status, website, color, secondaryColor, textColor } = Astro.props;

const statusLabels = {
  healthy: 'Operational',
  issues: 'Minor Issues',
  error: 'Major Issues',
  unknown: 'Unknown'
};
---

<article class="agency-card" data-agency-id={agencyId} style={color ? `--agency-color: ${color}; --agency-secondary-color: ${secondaryColor || color}; --agency-text-color: ${textColor || 'inherit'}` : undefined}>
  <header>
    <h3>{name}</h3>
    <span class={`status-badge status-${status}`}>
      {statusLabels[status]}
    </span>
  </header>
  <div class="agency-info">
    <p>
      <strong>{feedCount}</strong> {feedCount === 1 ? 'feed' : 'feeds'} available
    </p>
  </div>
  <footer>
    {website && (
      <a href={website} target="_blank" rel="noopener" class="website-btn" role="button">
        Visit the {name} website 
      </a>
    )}
    <button class="view-details-btn" data-agency-id={agencyId}>
      View feed details
    </button>
  </footer>
</article>

<style>
  .agency-card {
    cursor: pointer;
    transition: transform 0.2s, box-shadow 0.2s;
    height: 100%;
    display: flex;
    flex-direction: column;
  }

  .agency-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 8px 16px rgba(0, 0, 0, 0.1);
  }

  .agency-card header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    gap: 1rem;
    margin-bottom: 1rem;
    padding: 1.25rem 1.25rem 1.25rem;
    background: linear-gradient(
      120deg,
      var(--agency-color, transparent) 0%,
      var(--agency-color, transparent) 65%,
      var(--agency-secondary-color, transparent) 65%,
      var(--agency-secondary-color, transparent) 100%
    );
    color: var(--agency-text-color, inherit);
    border-radius: var(--pico-border-radius) var(--pico-border-radius) 0 0;
    margin: calc(-1 * var(--pico-block-spacing-vertical)) calc(-1 * var(--pico-block-spacing-horizontal)) 0.75rem;
  }

  .agency-card h3 {
    margin: 0;
    font-size: 1.35rem;
    line-height: 1.3;
    color: inherit;
  }

  .status-badge {
    padding: 0.35rem 0.85rem;
    border-radius: 1.5rem;
    font-size: 0.8rem;
    font-weight: 600;
    white-space: nowrap;
    text-transform: uppercase;
    letter-spacing: 0.025em;
  }

  .status-healthy {
    background-color: #93c59e;
    color: #0d3d18;
  }

  .status-issues {
    background-color: #fff3cd;
    color: #6b5103;
  }

  .status-error {
    background-color: #f8d7da;
    color: #5a0f19;
  }

  .status-unknown {
    background-color: #e2e3e5;
    color: #2d3236;
  }

  .agency-info {
    margin-bottom: 0.5rem;
    flex: 1;
  }

  .agency-info p {
    margin: 0 0 0.5rem 0;
    font-size: 1.25rem;
  }

  .agency-card footer {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  .website-btn {
    width: 100%;
    margin: 0;
    padding: 0.625rem 1rem;
    text-align: center;
    background-color: var(--pico-color-zinc-600);
    border-color: var(--pico-color-zinc-600);
  }

  .btn-icon {
    width: 1.5em;
    height: 1.5em;
    display: inline-block;
  }

  .website-btn:hover {
    background-color: var(--pico-color-zinc-500);
    border-color: var(--pico-color-zinc-500);
  }

  .view-details-btn {
    width: 100%;
    margin: 0;
    padding: 0.625rem 1rem;
  }
</style>
